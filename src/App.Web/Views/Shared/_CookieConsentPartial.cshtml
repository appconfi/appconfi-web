@using Microsoft.AspNetCore.Http.Features

@{
    var hideBanner = Context.Request.Cookies.ContainsKey("consentCookie");
    var cookieString = "consentCookie=true";
}

@if (!hideBanner)
{

    <div id="cookieConsent" class="alert alert-dark alert-dismissible fade show sticky-top" role="alert" style="font-size:12px;border-radius: 0">
        This website stores cookies on your computer. We use this information in order to improve and customize your browsing experience. <a asp-area="" asp-controller="Home" asp-action="cookies"><strong>Learn More</strong></a>.
        <button style="font-size:16px;" type="button" class="close" data-dismiss="alert" aria-label="Close" data-cookie-string="@cookieString">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <script>
            (function () {
                var button = document.querySelector("#cookieConsent button[data-cookie-string]");
                button.addEventListener("click", function (event) {
                    document.cookie = "@cookieString";
                    document.getElementById("cookieConsent").style.display = "none";
                }, false);
            })();
    </script>
}
