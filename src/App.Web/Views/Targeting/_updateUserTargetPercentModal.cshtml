@model App.Web.Core.Models.Targeting.TargetingViewModel
<div class="modal fade" id="updateTargetPercentModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <form asp-controller="targeting"
              asp-action="createorupdatepercent" asp-route-applicationId="@ViewData["ApplicationId"]"
              method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">New Rule</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="id" id="updateTargetPercentModal-input-id" />
                    <input type="hidden" name="EnvironmentId" value="@Model.SelectedEnvironment.Id" />

                    <div asp-validation-summary="All"></div>
                    <label for="updateTargetPercentModal-input-number">Percent</label>
                    <input type="range" class="custom-range" min="0" max="100" step="10" name="Percent" id="updateTargetPercentModal-input-number">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success">Save changes</button>
                </div>
            </div>
        </form>
    </div>
</div>