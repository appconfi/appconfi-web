@{
    Layout = "~/Views/Shared/_layout.cshtml";
    ViewData["Title"] = "Error";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="error-template">
                <h1>
                    Oops!
                </h1>
                <h2>
                    We are sorry, but there is an error.
                </h2>
                <div class="error-details">
                    @ViewData["Error"]
                </div>
            </div>
        </div>
    </div>
</div>


