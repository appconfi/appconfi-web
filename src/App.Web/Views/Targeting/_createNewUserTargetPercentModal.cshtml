@model App.Web.Core.Models.Targeting.TargetingViewModel

<div class="modal fade" id="createNewTargetPercentModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form asp-controller="targeting"
              asp-action="newpercent" asp-route-applicationId="@ViewData["ApplicationId"]"
              method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">New Rule</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">

                    <div asp-validation-summary="All"></div>
                    <div class="form-group">
                        <label for="EnvironmentId">Environment</label>
                        <select class="form-control" id="EnvironmentId" name="EnvironmentId">
                            @foreach(var env in Model.Environments)
                            {
                            <option value="@env.Id">@env.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="EnvironmentId">Feature</label>
                        <select class="form-control" id="FeatureToggleId" name="FeatureToggleId">
                            @foreach(var ft in Model.FeatureToggles)
                            {
                            <option value="@ft.Id">@ft.Key</option>
                            }
                        </select>
                    </div>
                    <label for="customRange3">Percent</label>
                    <input type="range" class="custom-range" min="0" max="100" step="10" name="Percent" id="Percent">
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="IsEnabled" name="IsEnabled" value="true" checked>
                        <label class="custom-control-label" for="IsEnabled">Is featured enabled</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success">Save changes</button>
                </div>
            </div>
        </form>
    </div>
</div>