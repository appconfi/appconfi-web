@model App.Web.Core.Models.Targeting.TargetingViewModel

<div class="modal fade" id="createNewTargetSpecificModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <form asp-controller="targeting"
              asp-action="createorupdateperuser" asp-route-applicationId="@ViewData["ApplicationId"]"
              method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">New Rule</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">

                    <div asp-validation-summary="All"></div>
                    <div class="form-group">
                        <label for="EnvironmentId">Environment</label>
                        <select class="form-control" id="EnvironmentId" name="EnvironmentId">
                            @foreach(var env in Model.Environments)
                            {
                            <option value="@env.Id">@env.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="EnvironmentId">Feature</label>
                        <select class="form-control" id="FeatureToggleId" name="FeatureToggleId">
                            @foreach(var ft in Model.FeatureToggles)
                            {
                            <option value="@ft.Id">@ft.Key</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="targetProperty">Property</label>
                        <input type="text" name="property" class="form-control" id="targetProperty" aria-describedby="propertyHelp" placeholder="Property name" value="id">
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="TargetOption" id="isInTheList" value="1" checked>
                        <label class="form-check-label" for="isInTheList">
                            Is in the list
                        </label>
                        <br />
                        <input class="form-check-input" type="radio" name="TargetOption" id="isNotInTheList" value="2">
                        <label class="form-check-label" for="isNotInTheList">
                            Is not in the list
                        </label>
                        <br />
                        <input class="form-check-input" type="radio" name="TargetOption" id="contains" value="3">
                        <label class="form-check-label" for="contains">
                            Contains
                        </label>
                        <br />
                        <input class="form-check-input" type="radio" name="TargetOption" id="notcontains" value="4">
                        <label class="form-check-label" for="notcontains">
                            Not Contains
                        </label>
                    </div>
                    <br />

                    <div class="form-group">
                        <label for="targetTextArea">User list (Comma separated)</label>
                        <textarea class="form-control" name="list" id="targetTextArea" rows="3" placeholder="1,2,3"></textarea>
                    </div>
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="IsEnabled2" name="IsEnabled" value="true" checked disabled>
                        <label class="custom-control-label" for="IsEnabled2">Is featured enabled</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success">Save changes</button>
                </div>
            </div>
        </form>
    </div>
</div>