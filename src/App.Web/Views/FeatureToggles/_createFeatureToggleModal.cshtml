@model App.Web.Core.Models.Application.NewApplicationFeatureToggleModel

<div class="modal fade" id="createFeatureToggle" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form asp-controller="featuretoggles" asp-route-applicationId="@ViewData["ApplicationId"]"
              asp-action="new"
              method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Create new feature toggle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div asp-validation-summary="All"></div>
                    <input asp-for="Key" class="form-control form-control-lg" placeholder="Key">
                    <br />
                    <div class="row">
                        <div class="col-3"><h6>Enabled:</h6></div>
                        <div class="col">
                            @*<div class="onoffswitch">
                                <input type="checkbox" name="IsEnabled" class="onoffswitch-checkbox" value="true" id="edit-toggle-value">
                                <label class="onoffswitch-label" for="edit-toggle-value"></label>
                            </div>*@
                            <div class="custom-control custom-switch">
                                <input type="checkbox" name="IsEnabled" class="custom-control-input" value="true" id="edit-toggle-value")>
                                <label class="custom-control-label" for="edit-toggle-value">Toggle this feature</label>
                            </div>
                        </div>
                    </div>
                   

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success">Save changes</button>
                </div>
            </div>
        </form>
    </div>
</div>


