@model App.Web.Core.Models.Account.RegisterModel;
@{
    Layout = "~/Views/Shared/_layout.cshtml";
    ViewData["Title"] = "Register";

    var email = Context.Request.Query["email"];

}
<form class="form-account" asp-controller="account"
      asp-action="register"
      method="post">

    <h1 class="h3 mb-5 font-weight-normal">Register</h1>

    <div>
        <a tabindex="1" asp-controller="account" asp-action="loginGoogle" class="loginBtn loginBtn--google">
            Login with Google
        </a>
    </div>

    <div class="mt-3 mb-3">- or -</div>

    <label for="inputEmail" class="sr-only">Email address</label>
    <div asp-validation-summary="All">
        @ViewData["ModelError"]
    </div>
    <input class="form-control" asp-for="FirstName" placeholder="Name" /><br />
    <input class="form-control" asp-for="LastName" placeholder="Last name" /> <br />
    @if (string.IsNullOrEmpty(email))
    {
        <input class="form-control" asp-for="Email" placeholder="Email" /><br />
    }
    else
    {
        <input class="form-control" asp-for="Email" placeholder="Email" value="@email" disabled /><br />
    }
    <input class="form-control" asp-for="Password" placeholder="Password" /><br />

    <div>
        I agree to the Terms and Conditions*
        <input class="ml-3" type="checkbox" name="Accept" value="true" checked />
    </div>

    <br />
    <button class="btn btn-lg btn-outline-info btn-block" type="submit">Register</button>

    <div style="margin-top:20px">I already have and account,  @Html.ActionLink("login", "login", "account")</div>
    <p class="mt-3 mb-3 text-muted">© @DateTime.UtcNow.Year</p>
</form>
